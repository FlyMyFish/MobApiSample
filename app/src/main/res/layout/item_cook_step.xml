<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="method"
            type="com.shichen.mobapisample.bean.CookBook.ResultBean.ListBean.Method" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_top_blank_block"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cook_step"
            android:layout_width="90dp"
            android:layout_height="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{method.step}"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/tipTextSize" />
    </LinearLayout>
</layout>