<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mHandler"
            type="com.shichen.mobapisample.TestApiActivity.TestApiHandler" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/test_api"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.AppBarLayout>

        <Button
            style="@style/NormalBigBtnStyle"
            android:onClick="@{()->mHandler.getCityList()}"
            android:text="@string/weather_api_city_list" />
        <Button
            style="@style/NormalBigBtnStyle"
            android:onClick="@{()->mHandler.getWeatherDataByProvinceAndCity()}"
            android:text="@string/province_city_weather" />
        <Button
            style="@style/NormalBigBtnStyle"
            android:onClick="@{()->mHandler.getWeatherType()}"
            android:text="@string/weather_type" />
    </LinearLayout>
</layout>